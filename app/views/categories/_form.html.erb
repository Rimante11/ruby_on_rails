<div class="container">
    <%= render 'shared/errors', obj: @category %>
    <%= form_with(model: @category, class:"shadow p-3 mb-3 form-bgd rounded") do |form| %>
    <br>
    <div class="formgroup row">

        <div class="row justify-content-center">
          <div class="col-8">
            <div class="form-group row">
              <%= form.label :name, "Category name", style: "display: block", class: "col-2 col-form-label label-text" %>
                <div class="col-10">
                  <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name"  %>
                </div>
            </div>

            <br>
            <div class=" justify-content-center btn-create-article">
              <%#testar if user is att signup form eller Update form, Ã¤ndras texten i button%>
              <%= form.submit class:"btn btn-outline-light btn-lg" %>
            </div>
          </div>
      <% end %>
    </div>
  
    </div>