<h1 class="text-center mt-4">Categories</h1>


 <div class="pagesNext">
      <%= will_paginate @categories %>
    </div> 
<div class="justify-content-center show-article shadow p-3 mb-5 bg-white rounded col-8">


    <div class="container ">
      <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
          <div class="col-4 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              
              <div class="card-body">
                <h5 class="card-title "><%= link_to category.name, category_path(category), class: "text-success" %></h5>
              </div>

              <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(category.created_at)%> ago, edited <%= time_ago_in_words(category.updated_at)%> ago</small>
              </div>
            </div>
          </div>
        </div>
        <br>  
      <% end %>
    </div>
</div>

<div class="pagesNext">
  <%= will_paginate @categories %>
</div> 

<%= render 'layouts/footer'%>


