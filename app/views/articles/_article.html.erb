    <div class="container ">
      <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header font-italic">
                by <%= article.user.username if article.user%>
                <%#to show user som tillhör till article, if pga om nån av article har inget user%>
              </div>
              <div class="card-body">
                <h5 class="card-title "><%= link_to article.title, articles_path(article), class: "text-success" %></h5>
                <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                <button type="button" class="btn btn-outline-success"><%= link_to 'View', article_path(article)%></button>
                <button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_article_path(article), method: :edit, class: "btn-outline-success" %></button>
                <button type="button" class="btn btn-outline-danger"><%= link_to 'Delete', article_path(article), method: :delete, form: { data: { turbo_comfirm: "Are you sure?" } } %></button>
              </div>
              <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(article.created_at)%> ago, edited <%= time_ago_in_words(article.updated_at)%> ago</small>
              </div>
            </div>
          </div>
        </div>
        <br>  
      <% end %>
    </div>




</div>


