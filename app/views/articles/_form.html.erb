<div class="container">
  <%= render 'shared/errors'%>
  <%= form_with(model: article, class:"shadow p-3 mb-3 form-bgd rounded") do |form| %>
    <br>
    <div class="formgroup row">

      
      
      <div class="row justify-content-center">
        <div class="col-8">
          <div class="form-group row">
            <%= form.label :title, style: "display: block", class: "col-2 col-form-label label-text" %>
            <div class="col-10">
              <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article..."  %>
            </div>
          </div>
          <br>
          <div class="form-group row">
            <%= form.label :description, style: "display: block", class: "col-2 col-form-label bs-white label-text" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article..." %>
          </div>
        </div>
        <br>
        <div class=" justify-content-center btn-create-article">
          <%= form.submit  class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
  <% end %>
</div>
  
  </div>
  <%= link_to "[ Cancel or back to articles ]", articles_path, class: "btn-create-article bs-gray-100" %>
</div>