<div class="container">
  <%= render 'shared/errors', obj: @user %>
  <%= form_with(model: @user, class:"shadow p-3 mb-3 form-bgd rounded") do |form| %>
    <br>
    <div class="formgroup row">

      <div class="row justify-content-center">
        <div class="col-8">
          <div class="form-group row">
            <%= form.label :username, style: "display: block", class: "col-2 col-form-label label-text" %>
              <div class="col-10">
                <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"  %>
              </div>
          </div>
          <br>
          <div class="form-group row">
            <%= form.label :email, style: "display: block", class: "col-2 col-form-label bs-white label-text" %>
          <div class="col-10">
            <%= form.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <br>
         <div class="form-group row">
            <%= form.label :password, style: "display: block", class:"col-2 col-form-label bs-white label-text"%>
            <div class="col-10">
              <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
            </div>
          </div>

        <br>
        <div class=" justify-content-center btn-create-article">
          <%= form.submit  class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
  <% end %>
</div>
  
  </div>
  <%= link_to "[ Cancel or back to articles ]", articles_path, class: "btn-create-article bs-gray-100" %>
</div>